<!DOCTYPE html>
<html lang="en">

<head>

    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/popup.css">
    <%- include('inc/metatag.ejs') %>

        <title>Login</title>
        <style>
            html,
            body {
                height: 100%;
            }

            body {
                display: flex;
                align-items: center;
            }

            .container {
                max-width: 500px !important;
            }
        </style>
        <link rel="stylesheet" href="/bootstrap/bootstrap.min.css">
</head>

<body>
    <div class="container ">
        <form id="loginform" onsubmit="return false">
            <div class="form-group">
                <button type="button" class="btn btn-dark" onclick="window.location.href='/'">Home</button>
            </div>
            <h1>Login</h1>
            <div class="form-group">
                <input required type="text" class="form-control" id="username" value="" placeholder="username"
                    name="username">
            </div>
            <div class="form-group">
                <input required type="password" class="form-control" id="userpass" value="" placeholder="password"
                    name="userpass">
            </div>
            <div class="form-group">
                Still you are not member? <a href="/signup">Let's do this</a>
            </div>
            <button type="submit" class="btn btn-primary" id="loginbtn">Login</button>
        </form>
    </div>
    <%- include('inc/popup.ejs') %>
        <script src="/js/jquery.min.js"></script>
        <script src="/js/fontawesome.js"></script>
        <script src="/js/popup.js"></script>
        <script src="/js/loginevents.js"></script>
</body>

</html>